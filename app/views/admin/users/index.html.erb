<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-12">
      <h1 class="display-4 text-primary">User Management</h1>
      <p class="lead">Manage all users in the system</p>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-12">
      <%= link_to "Back to Admin Dashboard", admin_dashboard_path, class: "btn btn-secondary" %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <% if @users.any? %>
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Questions Asked</th>
                <th>Joined</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= user.display_name %></td>
                  <td><%= user.email %></td>
                  <td>
                    <span class="badge <%= user.admin? ? 'bg-danger' : 'bg-primary' %>">
                      <%= user.role.titleize %>
                    </span>
                  </td>
                  <td><%= user.questions.count %></td>
                  <td><%= user.created_at.strftime("%B %d, %Y") %></td>
                  <td>
                    <%= link_to "View Profile", admin_user_path(user), class: "btn btn-sm btn-outline-primary" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="card">
          <div class="card-body text-center">
            <h5 class="card-title">No users found</h5>
            <p class="card-text">No users have registered yet.</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
