<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
          <li class="breadcrumb-item"><%= link_to "Grades", grades_path %></li>
          <li class="breadcrumb-item"><%= link_to @grade.display_name, grade_path(@grade) %></li>
          <li class="breadcrumb-item active" aria-current="page">Subjects</li>
        </ol>
      </nav>

      <h1 class="display-4 text-primary">Subjects in <%= @grade.display_name %></h1>
      <p class="lead">Select a subject to explore chapters</p>
    </div>
  </div>

  <div class="row">
    <% @subjects.each do |subject| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= subject.display_name %></h5>
            <p class="card-text">
              <%= pluralize(subject.chapters.count, 'chapter') %> available
            </p>
            <%= link_to "View Chapters", grade_subject_path(@grade, subject), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row mt-4">
    <div class="col-12">
      <%= link_to "Back to Grade", grade_path(@grade), class: "btn btn-secondary" %>
    </div>
  </div>
</div>
