<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <h1 class="display-4 text-primary">Available Grades</h1>
      <p class="lead">Select a grade to explore subjects and chapters</p>
    </div>
  </div>

  <div class="row">
    <% @grades.each do |grade| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= grade.display_name %></h5>
            <p class="card-text">
              <%= pluralize(grade.subjects.count, 'subject') %> available
            </p>
            <%= link_to "Explore Subjects", grade_path(grade), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row mt-4">
    <div class="col-12">
      <%= link_to "Back to Home", root_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
