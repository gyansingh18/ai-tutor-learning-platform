<div class="task-result">
  <% if is_correct %>
    <div class="text-center text-success">
      <i class="fas fa-check-circle fa-3x mb-3"></i>
      <h5 class="text-success">Correct!</h5>
      <p class="text-muted">Great job! Your answer is correct.</p>

      <% unless task.is_last? %>
        <div class="mt-3">
          <p class="text-muted">You can now proceed to the next task.</p>
        </div>
      <% else %>
        <div class="mt-3">
          <p class="text-muted">Congratulations! You've completed all tasks in this chapter.</p>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center text-danger">
      <i class="fas fa-times-circle fa-3x mb-3"></i>
      <h5 class="text-danger">Incorrect</h5>
      <p class="text-muted">Your answer is not quite right. Try again!</p>

      <div class="mt-3">
        <p class="text-muted">Review the instructions and try a different approach.</p>
      </div>
    </div>
  <% end %>

  <div class="mt-4">
    <h6>Your Answer:</h6>
    <div class="p-3 bg-light rounded">
      <code><%= student_answer.answer %></code>
    </div>
  </div>

  <% if task.task_type == 'coding' %>
    <div class="mt-3">
      <h6>Code Output:</h6>
      <div class="p-3 bg-dark text-light rounded">
        <pre><code>// Code execution would happen here
// For now, showing placeholder output</code></pre>
      </div>
    </div>
  <% end %>
</div>
