<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <h1 class="display-4 text-primary">PDF Materials</h1>
      <p class="lead">Manage uploaded study materials</p>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-12">
      <%= link_to "Upload New PDF", new_pdf_material_path, class: "btn btn-primary" %>
      <%= link_to "Back to Admin", admin_dashboard_path, class: "btn btn-secondary ms-2" %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <% if @pdf_materials.any? %>
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Title</th>
                <th>Chapter</th>
                <th>Uploaded By</th>
                <th>Upload Date</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @pdf_materials.each do |pdf| %>
                <tr>
                  <td><%= pdf.title %></td>
                  <td><%= pdf.chapter&.display_name %></td>
                  <td><%= pdf.user.display_name %></td>
                  <td><%= pdf.created_at.strftime("%B %d, %Y") %></td>
                  <td>
                    <% if pdf.pdf_file.attached? %>
                      <span class="badge bg-success">Uploaded</span>
                    <% else %>
                      <span class="badge bg-warning">Processing</span>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to "View", pdf_material_path(pdf), class: "btn btn-sm btn-outline-primary" %>
                    <%= link_to "Delete", pdf_material_path(pdf), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="card">
          <div class="card-body text-center">
            <h5 class="card-title">No PDF materials uploaded yet</h5>
            <p class="card-text">Start by uploading your first PDF material.</p>
            <%= link_to "Upload PDF", new_pdf_material_path, class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
